<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>maabhartilibrary.com</title>
    <link rel="stylesheet" href="/css/loginSignup.css" type="text/css">
    <style>

    </style>
</head>
<body>
    <div class="wrapper">
        <div class="title-text">
          <div class="title login">Login Form</div>
          <div class="title signup">Signup Form</div>
        </div>
        <div class="form-container">
          <div class="slide-controls">
            <input type="radio" name="slide" id="login" checked>
            <input type="radio" name="slide" id="signup">
            <label for="login" class="slide login">Login</label>
            <label for="signup" class="slide signup">Signup</label>
            <div class="slider-tab"></div>
          </div>
          <div class="form-inner">
            <form action="/login" method="post" class="login">
              <div class="field">
                <input type="email" name="email" placeholder="Email Address" required>
              </div>
              <div class="field">
                <input type="password" name="password" placeholder="Password" required>
              </div>
              <div class="pass-link"><a href='/forget-password'>Forgot password?</a></div>
              <div class="field btn">
                <div class="btn-layer"></div>
                <input type="submit" value="Login">
              </div>
              <div class="signup-link">Not a member? <a href='/register'>Signup now</a></div>
            </form>

            <form action="/register" class="signup" method="post" enctype="multipart/form-data">
              <div class="field">
                <input type="text" name="name" placeholder="Enter your name" required>
              </div>
              <div class="field">
                <input type="email" name="email" placeholder="Enter your Email" required>
              </div>
              <div class="field">
                <input type="text" name="mno" placeholder="Enter your mobile no" required>
              </div>
              <div class="field">
                <input id="file-upload" type="file" name="image" accept="image/*"  required>
                <!-- <label for="file-upload" class="custom-file-upload">
                  Upload Image
                </label> -->
                <!-- <input type="file" name="image" placeholder="Upload Image" required> -->
              </div>
              <div class="field">
                <input type="password" name="password" placeholder="Password" required>
              </div>
              <div class="field btn">
                <div class="btn-layer"></div>
                <input type="submit" value="Signup">
              </div>
              <% if(typeof message !== 'undefined') { %>
                <script>
                  alert('<%= message %>');
              </script>
              <% } %>
            </form>
          </div>
        </div>
      </div>
  
    <script src="/js/loginSignup.js"></script>
</body>
</html>
