<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>maabhartilibrary.com</title>
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .forgot-password {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .forgot-password h1 {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .password-form {
            margin-top: 20px;
        }

        .forgot-password-form-group {
            margin-bottom: 15px;
        }

        .forgot-password-form-group input[type="email"],
        .forgot-password-form-group input[type="submit"] {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .forgot-password-form-group input[type="submit"] {
            background-color: #007BFF;
            color: #fff;
            cursor: pointer;
        }

        .forgot-password-form-group input[type="submit"]:hover {
            background-color: #0056b3;
        }

        .alert-message {
            margin-bottom: 20px;
            text-align: center;
            font-size: 1.2rem;
            color: #dc3545;
            padding: 10px;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
        }

        .back-to-login {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #6c757d;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-top: 20px;
        }

        .back-to-login:hover {
            background-color: #5a6268;
        }

        /* Media queries for responsiveness */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .forgot-password {
                padding: 15px;
            }

            .forgot-password h1 {
                font-size: 1.8rem;
            }

            .forgot-password-form-group input[type="email"],
            .forgot-password-form-group input[type="submit"],
            .back-to-login {
                font-size: 0.9rem;
                padding: 8px;
            }

            .alert-message {
                font-size: 1rem;
                padding: 8px;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 10px;
            }

            .forgot-password {
                padding: 10px;
            }

            .forgot-password h1 {
                font-size: 1.5rem;
            }

            .forgot-password-form-group input[type="email"],
            .forgot-password-form-group input[type="submit"],
            .back-to-login {
                font-size: 0.8rem;
                padding: 6px;
            }

            .alert-message {
                font-size: 0.9rem;
                padding: 6px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="forgot-password">
            <h1>Forget Password</h1>

            <% if (typeof message !== 'undefined') { %>
                <div class="alert-message">
                    <script>
                        setTimeout(function() {
                            alert('<%= message %>');
                        }, 100);
                    </script>
                </div>
            <% } %>

            <form action="/forget-password" method="post" class="password-form">
                <div class="forgot-password-form-group">
                    <input type="email" name="email" required placeholder="Enter your email">
                </div>

                <div class="forgot-password-form-group">
                    <input type="submit" value="Get Password via Email">
                </div>
            </form>

            <a href="/loginSignup" class="back-to-login">Back to Login</a>
        </div>
    </div>
</body>
</html>
